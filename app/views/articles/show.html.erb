<h1> <%= @article.title %> </h1>

<p> <%= @article.body %> </p>

<ul>
    
    <li>
        <%= link_to 'edit', edit_article_path(@article) %>
    </li>
    <li>
        <%= link_to 'destroy', article_path(@article), 
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    </li>
    <li>
        <%= link_to 'back', root_path %>
    </li>
</ul>